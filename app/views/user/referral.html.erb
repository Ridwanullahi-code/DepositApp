<div class="h-full">
	<div class="relative">
		<img
			src="https://fiverr-res.cloudinary.com/q_auto/general_assets/referral_program/assets/f1/banner_background_md.jpg"
			class="absolute  object-fit" alt="background image" />
		<div class="py-10  w-full absolute top-0 left-0 right-0 bottom-0 flex flex-col items-center gap-5">
			<img class="rounded-full h-28 w-28"
				src="https://images.unsplash.com/photo-1631947430066-48c30d57b943?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=416&q=80"
				alt="my-image" />
			<h3 class="font-bold text-5xl text-center text-white">
				Invite Friends & <br /> You Get Up To R200
			</h3>
			<p class="text-2xl font-medium text-gray-200 text-center">
				Introduce your friends to the easiest way to get things done
			</p>
			<form class="w-full md:w-4/5 bg-white p-6 md:rounded-md flex flex-col gap-8 mb-20 shadow-lg">
				<div class="flex flex-col md:flex-row w-full gap-3">
					<input type="email" placeholder="Email Address"
						class="rounded-md outline-none border border-gray-200 p-2 flex-1 " />
					<button type="submit"
						class="rounded-md flex text-white font-bold bg-blue-600 hover:opacity-90 active:bg-blue-900 w-full md:w-24 justify-center items-center p-3">
						Send
					</button>
				</div>
				<hr />
				<div class="flex flex-col md:flex-row justify-center items-center gap-3">
					<div class="border border-gray-200 rounded-md w-full flex space-between">
						<input class="flex-1 p-2 outline-none referral-link" readOnly />
						<button type="button" class="p-3 bg-gray-200  border border-gray-200" onClick={handleCopyClick}>
							Copy Link
							<!-- {isCopied ? "Copied!" : "Copy Link"} -->
						</button>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>